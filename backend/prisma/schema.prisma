generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Favorite {
  id        Int      @id @default(autoincrement())
  placeId   String
  createdAt DateTime @default(now())
  userId    String

  @@unique([userId, placeId])
}

model ApiError {
  id           Int      @id @default(autoincrement())
  endpoint     String
  method       String
  errorMessage String
  stackTrace   String?
  userId       String?
  userAgent    String?
  ipAddress    String?
  requestBody  String?
  statusCode   Int
  createdAt    DateTime @default(now())

  @@index([endpoint])
  @@index([statusCode])
  @@index([createdAt])
  @@index([userId])
}
